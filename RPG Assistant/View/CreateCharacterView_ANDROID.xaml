                            <x:String>16</x:String>
                            <x:String>17</x:String>
                            <x:String>18</x:String>
                            <x:String>19</x:String>
                            <x:String>20</x:String>
                        </Picker.Items>
                    </Picker>
                </Grid>

                <!--bottom middle grid slot for Wisdom -->
                <Grid Grid.Row="1" Grid.Column="1">
                    <Picker
                x:Name="WisdomPicker"
                Title="Wisdom"
                FontSize="Large"
                SelectedIndexChanged="OnPickerSelectedWisdomChanged"
                TitleColor="DarkGray">
                        <Picker.Items>
                            <x:String>0</x:String>
                            <x:String>1</x:String>
                            <x:String>2</x:String>
                            <x:String>3</x:String>
                            <x:String>4</x:String>
                            <x:String>5</x:String>
                            <x:String>6</x:String>
                            <x:String>7</x:String>
                            <x:String>8</x:String>
                            <x:String>9</x:String>
                            <x:String>10</x:String>
                            <x:String>11</x:String>
                            <x:String>12</x:String>
                            <x:String>13</x:String>
                            <x:String>14</x:String>
                            <x:String>15</x:String>
                            <x:String>16</x:String>
                            <x:String>17</x:String>
                            <x:String>18</x:String>
                            <x:String>19</x:String>
                            <x:String>20</x:String>
                        </Picker.Items>
                    </Picker>
                </Grid>

                <!--bottom right grid slot for Charisma -->
                <Grid Grid.Row="1" Grid.Column="2">
                    <Picker
                x:Name="charismaPicker"
                Title="Charisma"
                FontSize="Large"
                SelectedIndexChanged="OnPickerSelectedCharismaChanged"
                TitleColor="DarkGray">
                        <Picker.Items>
                            <x:String>0</x:String>
                            <x:String>1</x:String>
                            <x:String>2</x:String>
                            <x:String>3</x:String>
                            <x:String>4</x:String>
                            <x:String>5</x:String>
                            <x:String>6</x:String>
                            <x:String>7</x:String>
                            <x:String>8</x:String>
                            <x:String>9</x:String>
                            <x:String>10</x:String>
                            <x:String>11</x:String>
                            <x:String>12</x:String>
                            <x:String>13</x:String>
                            <x:String>14</x:String>
                            <x:String>15</x:String>
                            <x:String>16</x:String>
                            <x:String>17</x:String>
                            <x:String>18</x:String>
                            <x:String>19</x:String>
                            <x:String>20</x:String>
                        </Picker.Items>
                    </Picker>
                </Grid>

            </Grid>
            
            <Button Clicked="Button_Clicked" Text="CREATE CHARACTER" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>